<%- include ('partials/header'); %>
<body>
  <%- include ('partials/navbar'); %>
  <div class="container">
    <div class="card" id="formPergunta">
      <div class="card-header">
        <h3>Fazer pergunta</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/salvarpergunta">
          <label>Título</label>
          <input
            name="titulo"
            class="form-control"
            type="text"
            placeholder="Título"
          />
          <br />
          <label>Descrição</label>
          <textarea
            name="descricao"
            class="form-control"
            placeholder="Descrição"
          ></textarea>
          <br />
          <button class="btn btn-light">Salvar</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include ('partials/footer'); %>
